<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maxoldshein.restaurantfinder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyC8MBW4fXs_qrtMh7m0gwmG2ZFBuUn43PQ" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewBusinessOnMapActivity" />
        <activity android:name=".ViewBusinessDetailsActivity" />
        <activity android:name=".SearchByNameActivity" />
        <activity android:name=".SearchByZipcodeActivity" />
        <activity android:name=".DisplaySearchByZipcodeActivity" />
        <activity android:name=".SearchByDeliveryActivity" />
        <activity android:name=".DisplaySearchByDeliveryActivity" />
        <activity android:name=".DisplaySearchByNameActivity"></activity>
    </application>

</manifest>