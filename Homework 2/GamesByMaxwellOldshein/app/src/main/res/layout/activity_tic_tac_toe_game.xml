<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maxoldshein.gamesbymaxwelloldshein.TicTacToeGame">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/topLeftButton"
                android:onClick="onBoardClick"/>
            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/topCenterButton"
                android:onClick="onBoardClick"/>
            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/topRightButton"
                android:onClick="onBoardClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/middleLeftButton"
                android:onClick="onBoardClick"/>
            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/middleCenterButton"
                android:onClick="onBoardClick"/>
            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/middleRightButton"
                android:onClick="onBoardClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/bottomLeftButton"
                android:onClick="onBoardClick"/>
            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/bottomCenterButton"
                android:onClick="onBoardClick"/>
            <Button
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:textSize="20pt"
                android:id="@+id/bottomRightButton"
                android:onClick="onBoardClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Click a button to begin"
                android:gravity="center_horizontal"
                android:textSize="10pt"
                android:id="@+id/turnView"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wins: 0, Losses: 0, Ties: 0"
                android:gravity="center_horizontal"
                android:textSize="10pt"
                android:id="@+id/winLossView"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Play Again"
                android:id="@+id/playAgain"
                android:onClick="onPlayAgainClick"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>